<style>
    .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin: 10px;
            width: 300px; /* Puedes ajustar el ancho seg√∫n tus necesidades */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .card-text {
        color: #555;
    }

    a {
        text-decoration: none;
        color: #007bff;
        display: block;
        margin-top: 10px;
    }

    a:hover {
        text-decoration: underline;
    }
</style>
<div>
    <center>
        <h1>Cart Detail</h1>
            {{#each carrito}}
            <div class="card">
                <h5 class="card-title"><strong>Title: </strong>{{this.product.title}}</h5>
                <p class="card-text"><strong>Price: </strong>{{this.product.price}}</p>
                <a href="/productdetail/{{this.product._id}}">Ver detalle</a>
                <p class="card-text"><strong>Quantity: </strong>{{this.quantity}}</p>
            </div>
            {{/each}}
        <div>
            <p>Subtotal:</p>
            <p>Total:</p>
        </div>
    </center>
</div>