<style>
    .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin: 10px;
            width: 300px; /* Puedes ajustar el ancho seg√∫n tus necesidades */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .card-text {
            color: #555;
        }

        a {
            text-decoration: none;
            color: #007bff;
            display: block;
            margin-top: 10px;
        }

        a:hover {
            text-decoration: underline;
        }
</style>
<div>
    <center>
        <div>
            <h1>Products</h1>
            {{#with user}}
            {{!-- <p>Bienvenido {{this.username}}</p> --}}
            <p>Bienvenido</p>
            <p>Usuario: {{this.username}}</p>
            {{!-- <p>Apellido: {{this.last_name}}</p> --}}
            <p>Email: {{this.email}}</p>
            <p>Role: {{this.role}}</p>
            {{/with}}
            {{!-- <button action="/api/sessions/logout" method="GET" href="/api/sessions/logout">Logout</button> --}}
            <a href="/api/sessions/logout">Logout</a>
            <a href="http://localhost:8080/api/carts/65b830c5d2b1935598426a25">Ver carrito</a>
            <div>
                    <p>Filtrar por cartegoria</p>
                <ul>
                    {{#each uniqueCategories}}
                        <li><a href="/api/products?category={{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
            {{#each product}}
            <div class="card">
                <h5 class="card-title"><strong>Title: </strong>{{this.title}}</h5>
                <p class="card-text"><strong>Price: </strong>{{this.price}}</p>
                <a href="/productdetail/{{this._id}}">Ver detalle</a>
            </div>
            {{/each}}
        </div>
        <div>
            {{#if hasPrevPage}}
                <a href="/api/products?pageQuery={{prevPage}}">Anterior</a>
            {{/if}}
            <label>{{page}}</label>
            {{#if hasNextPage}}
                <a href="/api/products?pageQuery={{nextPage}}">Siguiente</a>
            {{/if}}
        </div>
    </center>
</div>