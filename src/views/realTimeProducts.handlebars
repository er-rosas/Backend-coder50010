        <strong>Descripción:</strong> {{this.description}} <br>
        <button type="button" onclick="deleteProduct('{{this.id}}')">Eliminar producto</button>
        <!-- Otros detalles del producto -->
    </li> --}}
    {{/each}}
</ul>


